extends layout.jade
block contenido
  #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
    .panel.panel-info
      .panel-heading
        .panel-title Iniciar sesión
        // <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
      .panel-body(style='padding-top:30px')
        #login-alert.alert.alert-danger.col-sm-12(style='display:none')
        form#loginform.form-horizontal(role='form', method='post', action='/login')
          .input-group(style='margin-bottom: 25px')
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input#login-username.form-control(type='text', name='alias', value='', placeholder='Usuario')
          .input-group(style='margin-bottom: 25px')
            span.input-group-addon
              i.glyphicon.glyphicon-lock
            input#login-password.form-control(type='password', name='pass', placeholder='password')
          .form-group(style='margin-top:10px')
            // Button
            .col-sm-12.controls
              button#btn-login.btn.btn-success.btn-lg(type='submit', href='#')
                | Iniciar sesión
          .form-group
            .col-md-12.control
              div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
                | No tienes cuenta!!
                a(href='#', onclick="$('#loginbox').hide(); $('#signupbox').show()")
                  | Registrate aqui
  #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='display:none; margin-top:50px')
    .panel.panel-info
      .panel-heading
        .panel-title Registro
        div(style='float:right; font-size: 85%; position: relative; top:-10px')
          a#signinlink(href='#', onclick="$('#signupbox').hide(); $('#loginbox').show()") Volver
      .panel-body
        form#signupform.form-horizontal(role='form', method='post', action='/registrar')
          #signupalert.alert.alert-danger(style='display:none')
            p Error:
            span
          .form-group
            label.col-md-3.control-label(for='firstname') Nombre
            .col-md-9
              input.form-control(type='text', name='firstname', placeholder='Nombre')
          .form-group
            label.col-md-3.control-label(for='lastname') Apellidos
            .col-md-9
              input.form-control(type='text', name='lastname', placeholder='Apellidos')
          .form-group
            label.col-md-3.control-label(for='email') Email
            .col-md-9
              input.form-control(type='text', name='email', placeholder='Email')
          hr.spartan
          .form-group
            label.col-md-3.control-label(for='alias') Usuario
            .col-md-9
              input.form-control(type='text', name='alias', placeholder='Usuario')
          .form-group
            label.col-md-3.control-label(for='password') Contraseña
            .col-md-9
              input.form-control(type='password', name='pass', placeholder='Password')
          .form-group
            // Button
            .col-md-offset-3.col-md-9
              button#btn-signup.btn.btn-info(type='submit')
                i.icon-hand-right
                | Registrar
